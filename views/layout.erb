          <li><a class="icon icon-wallet" href="/"><img class="menuicons" src="/images/menuicons/home.png" alt="">Home</a></li>
        </ul>
      </nav>


      <div class="st-pusher">
        <!-- 	
                        example menus 
                        these menus will be under the push wrapper
                    -->

        <div class="st-content">
          <!-- this is the wrapper for the content -->
     
          <div class="st-content-inner">
            <!-- extra div for emulating position:fixed of the menu -->
            <!-- Top Navigation -->
            <header class="codrops-header">
              <h1>Vernancio's Snack Attack <span>A Pop-Up Bakery</span></h1>
              <button class="btn btn-lg btn-link button-glow" data-effect="st-effect-11">Menu</button>
            </header>
            <div class="main clearfix">

               <%= yield %>

              </div>
            </div>
            <!-- /main -->
          </div>
          <!-- /st-content-inner -->
        </div>
        <!-- /st-content -->
      </div>
<!--    </div>-->
        
<script src="/bakeryscript.js"></script>
